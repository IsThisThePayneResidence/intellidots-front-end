.spinner-component
  z-index: -100;
  opacity: 0
  position absolute
  top: 0
  left: 0
  height 100vh
  width  100vw
  background : rgba(0,0,0,.2)
  transition: all 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms
  align-items: center;
  justify-content: center;
  display: flex

  &.show
    z-index: 10000
    opacity: 1



